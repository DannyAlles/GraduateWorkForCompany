<Page x:Class="GraduateWorkCompany.Pages.ClientMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GraduateWorkCompany.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="40" d:DesignWidth="800"
      Title="ClientMenuPage">

    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10">
            <TextBlock x:Name="AccountBT" Text="Мой аккаунт" Margin="0 0 30 0" MouseLeftButtonUp="AccountBT_MouseLeftButtonUp" FontSize="15" Cursor="Hand"/>
            <TextBlock x:Name="TimetableBT" Text="Мои записи" Margin="0 0 30 0" MouseLeftButtonUp="TimetableBT_MouseLeftButtonUp" FontSize="15" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Page>
